{
    "title": "Switch Input Source Caps_lock",
    "rules": [
        {
            "description": "Switch Input Source Caps_lock",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_shift",
