                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "caps_lock"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Switch Input Source Caps_lock 2",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_shift",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "caps_lock"
                        }
                    ]
                }
            ]
        }
    ]
}