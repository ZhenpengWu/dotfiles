{
    "title": "New Mail Fn",
    "rules": [
        {
            "description": "Map Fn to Mail",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "fn",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "p",
                            "modifiers": [
                                "left_shift",
                                "left_command",
                                "left_control",
                                "left_option"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}